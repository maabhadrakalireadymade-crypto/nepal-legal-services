# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Database Configuration
# Choose one: PostgreSQL, MongoDB, or MySQL

# PostgreSQL (Recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/nepal_legal

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/nepal_legal

# MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/nepal_legal

# Supabase (Alternative)
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# SUPABASE_SERVICE_KEY=your_supabase_service_key

# Payment Gateway - eSewa
ESEWA_MERCHANT_ID=your_esewa_merchant_id
ESEWA_MERCHANT_SECRET=your_esewa_secret

# Payment Gateway - Khalti
KHALTI_PUBLIC_KEY=your_khalti_public_key
KHALTI_SECRET_KEY=your_khalti_secret_key

# Email Service
EMAIL_PROVIDER=sendgrid
# or EMAIL_PROVIDER=resend

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# Resend
RESEND_API_KEY=your_resend_api_key

# File Upload (Optional)
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=nepal-legal-documents

# Cloudinary (Alternative)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# SMS Service (Optional)
# Sparrow SMS Nepal
SPARROW_SMS_TOKEN=your_sparrow_sms_token
SPARROW_SMS_FROM=your_sender_id

# Authentication (Optional)
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Admin Credentials
ADMIN_EMAIL=admin@nepallegal.com
ADMIN_PASSWORD=change_this_password
